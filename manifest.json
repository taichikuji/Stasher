{
  "manifest_version": 3,
  "name": "Stasher",
  "version": "1.0",
  "description": "Yet Another Stash Manager by @taichikuji",
  "homepage_url": "https://github.com/taichikuji/Stasher",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "activeTab",
    "favicon" 
  ],
  "action": {
    "default_title": "Click to Stash"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "options_ui": {
    "page": "src/manager/manager.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  }
}